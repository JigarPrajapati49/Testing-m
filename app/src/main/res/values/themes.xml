<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MachineMaintain" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkAndLight</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
<!--        &lt;!&ndash; Secondary brand color. &ndash;&gt;-->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkBlue</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Spinner" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gelion_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottomNavigationTextActive">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/gelion_regular</item>
        <item name="android:textColor">@color/darkAndLight</item>
    </style>

    <style name="bottomNavigationTextInActive">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/gelion_regular</item>
        <item name="android:textColor">#00A8CC</item>
        <item name="alpha">0.6</item>
    </style>

    <style name="Theme.MachineMaintain.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MachineMaintain.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MachineMaintain.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/img_splash</item>
        <item name="android:statusBarColor">@color/darkBlue</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/darkAndLight</item>
    </style>

</resources>